{% extends "layout.njk" %}

{% block head %}
    <title>Instructor List</title>
    <link rel="stylesheet" href="styles/partials/instructor.css">
{% endblock head %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background: url(https://source.unsplash.com/collection/3203326/500x500) no-repeat center center / cover"></section>
        <section class="details">
            <h3>Details</h3>
            
            <div class="item">
                <div>Instructor</div>
                <div>John Smith</div>
            </div>

            <div class="item">
                <div>Avatar</div>
                <div><img src="https://source.unsplash.com/collection/3203326/100x100" alt=""></div>
            </div>

            <div class="item">
                <div>Age</div>
                <div>29</div>
            </div>

            <div class="item">
                <div>Gender</div>
                <div>Male</div>
            </div>

            <div class="item">
                <div>Specializations</div>
                <div>
                    <span>Crossfit</span>
                    <span>Cardio</span>
                </div>
            </div>

        </section>
    </div>
{% endblock content %}