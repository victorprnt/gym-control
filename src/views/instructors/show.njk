{% extends "layout.njk" %}

{% block head %}
    <title>Instructor List</title>
    <link rel="stylesheet" href="styles/partials/instructor.css">
{% endblock head %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background: url({{ instructor.avatar }}) no-repeat center center / cover"></section>
        <section class="details">
            <h3>Details</h3>
            
            <div class="item">
                <div>Instructor</div>
                <div>{{instructor.name}}</div>
            </div>

            <div class="item">
                <div>Age</div>
                <div>{{ instructor.birth }}</div>
            </div>

            <div class="item">
                <div>Gender</div>
                <div>{{ instructor.gender }}</div>
            </div>

            <div class="item">
                <div>Specializations</div>
                <div>
                    {% for service in services %}
                        <span>{{ service }}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{ instructor.created_at }}</div>
            </div>

        </section>
    </div>
{% endblock content %}