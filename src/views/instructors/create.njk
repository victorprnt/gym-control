{% extends "layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="styles/partials/instructor.css">
    <title>Instructor Register</title>
{% endblock head %}

{% block content %}
    <form class="card" action="/instructors" method="POST">
        <section class="avatar" style="background: url(https://source.unsplash.com/collection/3203326/500x500) no-repeat center center / cover"></section>
        <section class="details">
            <h3>New Instructor</h3>

            <div class="item">
                <div>Name</div>
                <div><input type="text" name="name" placeholder="Enter your name"></div>
            </div>

            <div class="item">
                <div>Avatar</div>
                <div><input type="url" name="avatar" placeholder="https://"></div>
            </div>

            <div class="item">
                <div>Birth Date</div>
                <div><input type="date" name="birth"></div>
            </div>

            <div class="item">
                <div>Gender</div>
                <div>
                    <span><input type="radio" name="gender" value="M" checked="checked">Masculino</span>
                    <span><input type="radio" name="gender" value="F">Feminino</span>
                </div>
            </div>

            <div class="item">
                <div>Specialization</div>
                <div><input type="text" name="specializataion" placeholder="Separate specializations using comma"></div>
            </div>

            <button type="submit">Salvar</button>
        </section>
    </form>
{% endblock content %}

</body>
</html>